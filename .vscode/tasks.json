{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "start-python-server",
            "type": "shell",
            "command": "python -m http.server 8000",
            "isBackground": true,
            "problemMatcher": {
                "owner": "python",
                "pattern": {
                    "regexp": ".*Serving HTTP on.*", // Regex pattern that matches server ready message
                    "file": 1,
                    "location": 2,
                    "message": 3
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": ".*Serving HTTP on.*", // Starts when server starts
                    "endsPattern": ".*" // Adjust this pattern to match a message indicating the server is ready
                }
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        }
    ]
}
